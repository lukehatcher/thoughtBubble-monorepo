// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
//
// https://code.visualstudio.com/docs/editor/tasks#vscode
// command + shift + b to select by label or...
// command + shift + P -> Tasks: Run {group} Task -> select task by label

{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
